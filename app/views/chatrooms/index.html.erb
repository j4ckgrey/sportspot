  <div class="container py-5">
    <div class="row">
      <div class="col-xl-12 col-lg-5 col-xl-4 mb-4 mb-md-0">
        <h3 class="font-weight-bold mb-3 text-center bg-secondary bg-gradient text-light">Your chats</h3>
        <div class="card">
          <% @chatrooms.each do |chatroom| %>
            <% if chatroom.creator == current_user || chatroom.club_owner == current_user %>
              <% if chatroom.list == true %>
                <div class="card-body">
                  <ul class="list-unstyled mb-0">
                    <li class="p-2 border-bottom" style="background-color: #eee;">
                      <a href="<%= chatroom_path(chatroom) %>" class="text-decoration-none d-flex justify-content-between">
                        <div class="d-flex flex-row">
                          <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/avatar-8.webp" alt="avatar"
                            class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60">
                          <div class="pt-1">
                            <p class="fw-bold mb-0">
                              <%= chatroom.name %>
                            </p>
                            <P class="small text-muted"><%= chatroom.club_owner.first_name %><p>
                          </div>
                        </div>
                      </a>
                    </li>
                  </ul>
                </div>
                <% if chatroom.creator == current_user %>
                  <%= link_to "Delete this conversation", chatroom_path(chatroom), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this conversation?' }, class:"btn btn-primary btn-sm" %>
                <% end %>
              <% else %><p>You have no chats at the moment</p>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
