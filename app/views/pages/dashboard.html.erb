<div class="container mb-5">
  <% if current_user.is_user? %>
    <h1 class="bg-secondary bg-gradient">Here are your bookings</h1>
    <ul><% @mybookings.each do |booking| %></ul>
      <li><%= booking.venue.club.name %></li>
      <li><%= booking.venue.name %></li>
      <li><%= booking.date %></li>
      <li><%= booking.time %></li>
      <li><%= booking.status %></li>
      <%= link_to "Cancel my Booking", booking_path(booking), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to cancel?' }, class:"btn btn-primary btn-sm" %>
    <ul><% end %></ul>
  <ul><% end %></ul>

  <% if current_user.is_owner? %>
    <div class="row justify-content-center">
      <h3 class="text-center mt-5 strong bg-secondary bg-gradient text-white">Your owned clubs</h3>
      <% @owns.each do |club| %>
        <div class="card club-card shadow p-3 mb-4 bg-white rounded-3 text-center m-3" style="width: 15rem; height:15rem;">
          <img src="https://www.gardasee.de/sites/default/files/teaserimg/tennis_adobestock_285441870_0.jpeg" class="card-img-top shadow border-1 rounded-3 mt-1" alt="Club Image">
          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <p class="card-title"><%= club.name %></p>
            </div>
            <%= link_to "", club, class:"stretched-link" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if current_user.is_owner? %>
    <h3 class="bg-secondary bg-gradient text-white text-center">Pending requests</h3>
      <div class="card mb-2 shadow rounded-3" style="max-width: 1300px;">
        <div class="row g-0 border">
          <div class="col-md-8">
            <div class="card-body d-flex flex-column justify-content-between">
              <% current_user.venues.each do |venue| %>
                <% venue.bookings.each do |booking| %>
                  <% if booking.status == 'pending' %>
                    <%= booking.user.first_name %> has made a booking for <%= venue.name %>
                    <%= link_to "Confirm", booking_path(booking, booking: {status: :confirmed}), data: { turbo_method: :patch, turbo_confirm: 'Are you sure you want to confirm?' }, class:"btn btn-primary btn-sm" %>
                    <%= link_to "Decline", booking_path(booking, booking: {status: :declined}), data: { turbo_method: :patch, turbo_confirm: 'Are you sure you want to decline?' }, class:"btn btn-secondary btn-sm" %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  <% end %>

  <% if current_user.is_owner? %>
    <h3 class="bg-secondary bg-gradient text-white text-center">Upcoming bookings</h3>
      <div class="card mb-2 shadow rounded-3" style="max-width: 1300px;">
        <div class="row g-0 border">
          <div class="col-md-8">
            <div class="card-body d-flex flex-column justify-content-between">
              <% current_user.venues.each do |venue| %>
                <% venue.bookings.each do |booking| %>
                  <% if booking.confirmed? %>
                    <%= booking.user.first_name %> has made a booking for <%= venue.name %> on <%= booking.date %> at <%= booking.time %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>
