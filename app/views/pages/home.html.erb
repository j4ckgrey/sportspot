<div class="container">
  <%= form_tag(search_path, method: :get, class: "form-inline") do %>
    <div class="form-group mr-2">
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Your post code" %>
    </div>
    <div class="form-group mr-2">
      <%= select_tag :category, options_for_select(['All', 'categroy1', 'Basketball', 'Tennis', 'Badminton', 'Pool', 'Bowling']), class: "form-control", prompt: 'Select Category' %>
    </div>
    <%= submit_tag "Search", class: "btn btn-primary" %>

  <% end %>
</div>


