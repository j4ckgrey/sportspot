<div class="container">
  <div class="row">
    <div class="col-md-8">
      <% if @results.any? %>
        <h3 class="text-center my-5 bg-secondary bg-gradient text-white">Search Results:</h3>
        <div class="container mx-auto">
          <% @results.each do |result| %>
            <div class="card mb-5 shadow rounded-3 club-card" style="max-width: 1200px;">
              <div class="row g-0 border">
                <div class="col-md-4">
                  <img src="https://www.gardasee.de/sites/default/files/teaserimg/tennis_adobestock_285441870_0.jpeg" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                  <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                      <h1 class="card-title"><%= result.name %></h1>
                      <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                      <div class="venue-buttons">
                        <% result.venues.each do |venue| %>
                          <%= button_to venue.name, venue_path(venue), method: :get, class: "btn btn-secondary venue-button" %>
                        <% end %>
                      </div>
                      <%= link_to "", club_path(result), class: "stretched-link" %>
                    </div>
                    <p class="card-text"><small class="text-muted"><%= result.address %></small></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center m-5">
          <p>No results found.</p>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <div class="sticky-top" style="top: 180px;">
        <%= render "shared/map" %>
      </div>
    </div>
  </div>
</div>
