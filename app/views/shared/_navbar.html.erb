<div class="navbar sticky-top navbar-expand-sm bg-dark navbar-lewagon text-white">
  <div class="container-fluid">
    <div>
      <%= link_to root_path, class: "navbar-brand" do %>
        <i class="bi bi-watch text-white ps-4" style="font-size: 25px"></i>
      <% end %>
      <%= link_to root_path, class: "navbar-brand ps-5" do %>
        <i class="fa-solid fa-house" style="color: #ffffff;"></i>
      <% end %>
    </div>

    <div class="row justify-content-center w-75">
      <div class="my-3">
        <%= form_with(url: root_path, method: :get, class: "d-flex") do |f| %>
          <%= f.text_field :query, class: "form-control", placeholder: "Type a keyword" %>
          <%= f.submit "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <p class="fs-7 d-block p-2 text-dark"><%= current_user.email %></p>
              <%= link_to "Dashboard", dashboard_path, class: "dropdown-item border d-block p-2 bg-secondary text-white" %>
              <%= link_to "Notifications", rental_requests_path, class: (current_user.notification.zero? ? "dropdown-item border d-block p-2 bg-secondary text-white" : "dropdown-item bg-warning") %>
              <%= link_to "Offer new Watch", new_watch_path, class: "dropdown-item border d-block p-2 bg-secondary text-white" %>
              <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item border d-block p-2 bg-secondary text-white" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link text-light" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
