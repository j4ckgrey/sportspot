<nav class="navbar navbar-expand-sm fixed-top navbar-lewagon" style="background-color:#9cbfdd;position:sticky;">
  <div class="container">
    <%= link_to "/", class: "navbar-brand text-decoration-none" do %>
     <%= image_tag "sportspot-logo_blue.png", class: "logo ms-2", style:"width:80px;"%>
    <% end %>
    <div class="d-flex justify-content-center align-items-center mt-1 h-100">
      <%= form_tag(search_path, method: :get) do %>
        <%= text_field_tag :query, params[:query], placeholder: "Your post code", class: "rounded search-input" %>
        <%= select_tag :category, options_for_select(['All', "Football", "MartialArts", "Bouldering", "Kegel", "Bowling", "Volleyball"]), include_blank: 'Select Category', class: "rounded search-select" %>
        <%= submit_tag "Search", class: "rounded search-button bg-success bg-gradient text-dark" %>
      <% end %>
    </div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.photo.present? %>
              <%= cl_image_tag current_user.photo.key, class:"avatar", alt: "dropdown menu"%>
            <% else %>
              <%= image_tag "acc_default.png", class: "avatar", alt: "dropdown menu" %>
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end bg-white" aria-labelledby="navbarDropdown">
              <h5 class="fs-7 d-block p-2 text-dark text-center"><%= current_user.first_name %></h5>
              <%= link_to "All venues", venues_path, class: "text-center dropdown-item border d-block p-2 soft_blue" %>
              <%= link_to "All clubs", clubs_path, class: "text-center dropdown-item border d-block p-2 soft_blue" %>
              <%= link_to "Dashboard", dashboard_path, class: "text-center dropdown-item border d-block p-2 soft_blue" %>
              <%= link_to "Messages", chatrooms_path, class: "text-center dropdown-item border d-block p-2 soft_blue" %>
              <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-center dropdown-item border d-block p-2 soft_blue" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
