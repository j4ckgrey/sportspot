<div class="row justify-content-center mx-auto" style="width: 1200px;">
  <h1 class="text-center my-5 strong bg-gradient border-bottom border-3 border-dark">All venues</h1>
  <% @venues.each do |venue| %>
    <% if venue.club.status == true %>
      <div class="card venue-card shadow p-3 mb-5 bg-white rounded-4 text-center m-3 club-card" style="width: 22rem; height:33rem;">
        <div class="h-50">
          <% if venue.photos.empty? %>
            <img src="https://www.axicorp.de/fileadmin/_processed_/6/b/csm_s-motive_AdobeStock_223415515_e9a05aadfa.jpeg" class="img-thumbnail d-block w-100" alt="..." style="height:1000;width:400;crop::fill;">
          <% else %>
            <%= cl_image_tag venue.photos.first.key, crop: :fill, class:"d-block img-thumbnail img-fluid rounded-start", style:"height:230px; width: 100%; object-fit: cover;"%>
          <% end %>
        </div>
        <div class="card-body d-flex flex-column justify-content-between">
          <div>
            <h4 class="card-title"><%= venue.name %></h4>
            <h5 class="card-text"><%= venue.category %></h5>
            <p><%= venue.description.truncate(80) %></p>
          </div>
          <%= link_to "", venue, class:"stretched-link" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
