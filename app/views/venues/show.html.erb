<div class="container bg-light shadow my-5">
  <div class="px-3 pt-3 d-flex justify-content-between">
    <%= link_to "Back to Club", club_path(@venue.club), class:"btn club-card", style:"color:white;background-color:#9cbfdd" %>
    <h6 class="badge rounded-pill bg-secondary">Price: <%=@venue.price%>â‚¬ / Hour</h6>
  </div>
  <div class="row">
    <div class="col-6 p-3">
      <%= render "shared/carousel", venue: @venue %>
    </div>
    <div class="col-6 text-center p-5 d-flex flex-column justify-content-between">
      <div>
        <h1><%= @venue.name %></h1>
        <h4>Your <%= @venue.category %> Arena</h4>
      </div>
      <%= @venue.description %>
      <% if current_user.is_owner? || current_user.is_admin?%>
        <div class="btn-group w-100" role="group" aria-label="Basic example">
        <%= link_to "edit venue",edit_venue_path(@venue), class:"club-card btn btn-success" %>
        <a><%= link_to "delete venue",venue_path(@venue), class:"club-card btn btn-success", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %></a>
      <% elsif current_user.is_user? %>
        <button type="button " class="club-card btn btn-success", data-bs-toggle="modal" data-bs-target="#exampleModal">Request new booking</button>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Booking request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <%= simple_form_for [@venue, @booking] do |f| %>
                <div class="modal-body">
                  <%= f.input :date, as: :date, html5: true %>
                  <%= f.input :time, as: :time, html5: true %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <%= f.submit 'Request Booking', class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
  <h3 class="bg-secondary bg-gradient text-center text-light">Reviews</h3>
    <% @reviews.each do |review| %>
      <div class="border px-5 py-3 mb-2">
        <h4 class="bg-light bg-gradient"><%= review.title %></h4>
        <div>
          <% review.rating.times do %>
            <i class="fa-solid fa-star" style="color: #fecb3e;"></i>
          <% end %>
        </div>
        <p><%= review.comment %></p>
      </div>
    <% end %>
  </div>
</div>
